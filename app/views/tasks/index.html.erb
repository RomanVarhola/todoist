<p id="notice"><%= notice %></p>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
<br/>
<br/>
<div class="col-md-12">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Tasks</h3>
    </div>
  <div class="panel-body">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= link_to 'Show', task, class: "button btn btn-success" %></td> 
        <td><%= link_to 'Edit', edit_task_path(task), class: "button btn btn-warning" %></td> 
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "button btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

</div>
